<% layout("/layouts/boilerplate") %>
<body>
 <div class="row mt-3"> 
  <div class="col-8 offset-2"> 
    <h1>Create New Listings</h1>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"><!--nonvalidate  use to defoult the browsers settings -->
         <div class="mb-3">
         <label for="title" class="form-label">Title</label>
         <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" 
         required
         >
         <div class="valid-feedback">Title Looks Good</div> 
         </div>

         <div class="mb-3">
         <label for="description" class="form-label">description</label>
         <textarea name="listing[description]" placeholder="Enter description"  type="text" class="form-control" required ></textarea>
         <div class="invalid-feedback">Enter Short Description</div> 
         </div>

         <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" type="file" class="form-control" required >
         </div>

         <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Enter price" type="number" class="form-control" required>
            <div class="invalid-feedback">Enter the Price</div>
         </div>

         <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter location"  type="text" class="form-control" required>
            <div class="invalid-feedback">Enter the Location</div>
         </div>
         <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="Enter country"  type="text" class="form-control" required>
            <div class="invalid-feedback">Enter the Country</div>
         </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
     </form>
    </div>
 </div>
  
</body>
